APP_NAME="Photo Stack"
APP_ENV=local
# SECURITY: MUST be false in production! Exposes sensitive info if true.
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=hu
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=hu_HU

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=photo_stack
DB_USERNAME=photo_stack
DB_PASSWORD=secret

SESSION_DRIVER=redis
SESSION_LIFETIME=43200
# SECURITY: Session encryption - MUST be true in production!
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Sanctum token expiration (minutes) - 30 days default
SANCTUM_EXPIRATION=43200

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Laravel Reverb (WebSocket) - Local
REVERB_APP_ID=tablo-local
REVERB_APP_KEY=tablo-local-key
REVERB_APP_SECRET=tablo-local-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@photostack.local"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Anthropic Claude API
ANTHROPIC_API_KEY=

APP_KEY=

# Stripe API Keys
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# TablóStúdió Subscription Price IDs (Stripe Dashboard → Products → Prices)
# Create 3 products in Stripe: TablóStúdió Alap, Iskola, Stúdió
# Each product needs 2 prices: monthly recurring + yearly recurring
STRIPE_PRICE_ALAP_MONTHLY=price_xxx
STRIPE_PRICE_ALAP_YEARLY=price_xxx
STRIPE_PRICE_ISKOLA_MONTHLY=price_xxx
STRIPE_PRICE_ISKOLA_YEARLY=price_xxx
STRIPE_PRICE_STUDIO_MONTHLY=price_xxx
STRIPE_PRICE_STUDIO_YEARLY=price_xxx

# Paused subscription prices (reduced rate during pause)
STRIPE_PRICE_ALAP_PAUSED=price_xxx
STRIPE_PRICE_ISKOLA_PAUSED=price_xxx
STRIPE_PRICE_STUDIO_PAUSED=price_xxx

# Sentry Error Tracking
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2

# Frontend URLs (for Stripe redirect and CORS)
FRONTEND_URL=https://tablostudio.hu
FRONTEND_TABLO_URL=https://kepvalaszto.hu
