# ============================================
# Application Settings - Newage
# ============================================
APP_NAME="Photo Stack Newage"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Budapest
APP_URL=https://admin-newage.kepvalaszto.hu
FRONTEND_URL=https://newage.kepvalaszto.hu
APP_LOCALE=hu
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=hu_HU

# ============================================
# Database Configuration - Newage
# ============================================
DB_CONNECTION=pgsql
DB_HOST=newage-postgres-prod
DB_PORT=5432
DB_DATABASE=newage_prod
DB_USERNAME=newage_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================
# Cache & Session (Redis) - Newage
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=newage_cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.kepvalaszto.hu
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================
# Queue Configuration - Newage
# ============================================
QUEUE_CONNECTION=redis
QUEUE_PREFIX=newage_queue

# ============================================
# Redis Configuration - Newage
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=newage-redis-prod
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_PREFIX=newage_

# ============================================
# Mail Configuration (Local Mail Server)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@kepvalaszto.hu"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Email System Configuration
# ============================================
EMAIL_SYSTEM_ENABLED=true
EMAIL_SYSTEM_FROM_ADDRESS="noreply@kepvalaszto.hu"
EMAIL_SYSTEM_FROM_NAME="Photo Stack Newage"
EMAIL_SYSTEM_REPLY_TO_ADDRESS="support@kepvalaszto.hu"
EMAIL_SYSTEM_REPLY_TO_NAME="Photo Stack Newage Support"
EMAIL_SYSTEM_QUEUE_ENABLED=true

# ============================================
# Stripe Payment (Test Mode - Change to Live Keys Later)
# ============================================
STRIPE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET=sk_test_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# ============================================
# Invoicing Configuration
# ============================================
INVOICING_PROVIDER=szamlazz
INVOICING_SZAMLAZZ_AGENT_KEY=YOUR_SZAMLAZZ_HU_KEY
INVOICING_SZAMLAZZ_DOWNLOAD_PDF=true

# ============================================
# Storage Configuration
# ============================================
FILESYSTEM_DISK=local
MEDIA_DISK=public

# ============================================
# Face Recognition API
# ============================================
FACE_RECOGNITION_ENABLED=true
FACE_RECOGNITION_URL=http://deepface-api:5000

# ============================================
# CompreFace Configuration - Newage
# ============================================
COMPREFACE_API_URL=http://newage-compreface-api:8080
COMPREFACE_API_KEY=<GENERATE_AFTER_SETUP>
COMPREFACE_TIMEOUT=60
COMPREFACE_SIMILARITY_THRESHOLD=0.7

# ============================================
# Logging
# ============================================
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAILY_DAYS=14
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false

# ============================================
# Broadcasting
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# Trusted Proxies (for SSL behind reverse proxy)
# ============================================
TRUSTED_PROXIES=*

# ============================================
# Security & CORS - Newage
# ============================================
SANCTUM_STATEFUL_DOMAINS=newage.kepvalaszto.hu,admin-newage.kepvalaszto.hu
SESSION_DOMAIN=.kepvalaszto.hu
CORS_ALLOWED_ORIGINS=https://newage.kepvalaszto.hu,https://admin-newage.kepvalaszto.hu

# ============================================
# Google Maps (if used)
# ============================================
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# ============================================
# Vite (Frontend Build)
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"

