# ============================================
# Application Settings
# ============================================
APP_NAME="Photo Stack"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Budapest
APP_URL=https://api.photo-stack.tabloone.hu
FRONTEND_URL=https://photo-stack.tabloone.hu
APP_LOCALE=hu
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=hu_HU

# ============================================
# Database Configuration
# ============================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=photo_stack_prod
DB_USERNAME=photo_stack_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================
# Cache & Session (Redis)
# ============================================
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.tabloone.hu
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# Redis Configuration
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ============================================
# Mail Configuration (Local Mail Server)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@kepvalaszto.hu"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Email System Configuration
# ============================================
EMAIL_SYSTEM_ENABLED=true
EMAIL_SYSTEM_FROM_ADDRESS="noreply@kepvalaszto.hu"
EMAIL_SYSTEM_FROM_NAME="Photo Stack"
EMAIL_SYSTEM_REPLY_TO_ADDRESS="support@kepvalaszto.hu"
EMAIL_SYSTEM_REPLY_TO_NAME="Photo Stack Support"
EMAIL_SYSTEM_QUEUE_ENABLED=true

# ============================================
# Stripe Payment (Test Mode - Change to Live Keys Later)
# ============================================
STRIPE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET=sk_test_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# ============================================
# Invoicing Configuration
# ============================================
INVOICING_PROVIDER=szamlazz
INVOICING_SZAMLAZZ_AGENT_KEY=YOUR_SZAMLAZZ_HU_KEY
INVOICING_SZAMLAZZ_DOWNLOAD_PDF=true

# ============================================
# Storage Configuration
# ============================================
FILESYSTEM_DISK=local
MEDIA_DISK=public

# ============================================
# CompreFace Configuration
# ============================================
COMPREFACE_API_URL=http://compreface-api:8080
COMPREFACE_API_KEY=<GENERATE_AFTER_SETUP>
COMPREFACE_TIMEOUT=60
COMPREFACE_SIMILARITY_THRESHOLD=0.7

# ============================================
# Logging
# ============================================
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DAILY_DAYS=14
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false

# ============================================
# Broadcasting
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# Trusted Proxies (for SSL behind reverse proxy)
# ============================================
TRUSTED_PROXIES=*

# ============================================
# Security & CORS
# ============================================
SANCTUM_STATEFUL_DOMAINS=photo-stack.tabloone.hu,api.photo-stack.tabloone.hu
SESSION_DOMAIN=.tabloone.hu
CORS_ALLOWED_ORIGINS=https://photo-stack.tabloone.hu,https://api.photo-stack.tabloone.hu

# ============================================
# Google Maps (if used)
# ============================================
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# ============================================
# Vite (Frontend Build)
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"

